/* 主页面样式 */
page {
	background-color: rgb(250, 250, 250);
}
view {
	/* width: 100%; */
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	font-size: 14px;
}
.uni-button{
	font-size: 14px;
}
/* 表单样式 */
.uni-form-item {
	height: 35px;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	    -ms-flex-direction: row;
	        flex-direction: row;
	margin-bottom: 10px;
}
.form-inpput {
	width: 75vw;
	line-height: 35px;
	background-color: #fff;
	font-size: 14px;
}
.form-inpput .uni-input-input,
.form-inpput .placeholder {
	font-size: 14px;
}
.form-inpput .form-radio-group {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
}
.form-inpput .formRadio {
	font-size: 14px;
	width: 60px;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
}
.form-inpput .picker {
	font-size: 14px;
}
.form-lable {
	width: 25vw;
	line-height: 35px;
	font-size: 14px;
	color: #a0a0a0;
}
.form-inpput input {
	height: 35px;
	line-height: 35px;
	padding: 0 3px;
	border-radius: 3px;
}
.form-inpput uni-textarea{
	width: auto;
}
.form-inpput-textarea{
	height: 150px;
}
.verification-wrapper {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
}
.verification-input {
	-webkit-box-sizing: content-box;
	        box-sizing: content-box;
}
.verification-btn {
	width: 160px;
	line-height: 35px;
	-webkit-box-sizing: content-box;
	        box-sizing: content-box;
}
/* 卡片阴影 */
.card-shadow {
	border: 1px #ddd solid;
	-webkit-box-shadow: 0px 1px 2px rgba(0, 0, 0, 0.2);
	box-shadow: 0px 1px 2px rgba(0, 0, 0, 0.2);
}
/* 图片 */
.image-wrapper {
	overflow: hidden;
}
.image {
	width: 100%;
	height: 100%;
}
/* 两行超出显示··· */
.text-two-line {
	-o-text-overflow: -o-ellipsis-lastline;
	   text-overflow: -o-ellipsis-lastline;
	overflow: hidden;
	-o-text-overflow: ellipsis;
	   text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	line-clamp: 2;
	-webkit-box-orient: vertical;
}
/* 加载跟多 */
.loadMore{
	color: #cccccc;
	line-height: 30px;
}
.rotate{
	-webkit-animation: myMove 2s linear infinite;
	        animation: myMove 2s linear infinite;
	margin-right: 8px;
	/* transition: roall 2s linear; */
}
@-webkit-keyframes myMove{
from{
		-webkit-transform: rotate(0deg);
		        transform: rotate(0deg)
}
to{
		-webkit-transform: rotate(359deg);
		        transform: rotate(359deg)
}
}
@keyframes myMove{
from{
		-webkit-transform: rotate(0deg);
		        transform: rotate(0deg)
}
to{
		-webkit-transform: rotate(359deg);
		        transform: rotate(359deg)
}
}
